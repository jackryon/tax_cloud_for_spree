<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<h1><%= t('taxcloud_settings') %></h1>

<%= form_tag(admin_tax_cloud_settings_path, 
  :method => :put, 
  :id => :tax_cloud_settings_form) do %>

  <div class="yui-g">
    <div class="yui-u first">
      <fieldset>
        <legend><%= t('taxcloud_api_login_and_key') %></legend>
        <p>
          <label><%= t('taxcloud_api_login_id') %></label><br />
          <%= text_field_tag('settings[taxcloud_api_login_id]', Spree::Config.taxcloud_api_login_id, :size => 46, :maxlength => 256, :class => 'tax_cloud') %>
        </p>
        <p>
          <label><%= t('taxcloud_api_key') %></label><br />
          <%= text_field_tag('settings[taxcloud_api_key]', Spree::Config.taxcloud_api_key, :maxlength => 256, :class => 'tax_cloud') %>
        </p>
      </fieldset>
    

      <fieldset>
        <legend><%= t('usps_user') %></legend>
        <p>
          <label><%= t('usps_user_id') %></label><br />
          <%= text_field_tag('settings[taxcloud_usps_user_id]', Spree::Config.taxcloud_usps_user_id, :size => 46, :maxlength => 256, :class => 'tax_cloud') %>
        </p>
      </fieldset>
    </div>
  </div>

  <p class="form-buttons"><%= button t('save_preferences') %></p>

<% end %>

